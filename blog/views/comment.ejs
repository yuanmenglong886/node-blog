<br />
<% posts.comments.forEach(function (comment, index) { %>
<p><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info"> 回复于 <%= comment.time %></span></p>
<p><%- comment.content %></p>
<% }) %>

<form method="post">
    <% if (user) { %>
    姓名：<input type="text" name="name" value="<%= user.name %>" /><br />
    邮箱：<input type="text" name="email" value="<%= user.email %>" /><br />
    网址：<input type="text" name="website" value="/u/<%= user.name %>" /><br />
    <textarea name="content" rows="5" cols="80"></textarea><br />
    <input type="submit" value="留言" />
    <% } else { %>
    请登陆后才可以留言哦<br />
    <span><a title="发表" href="/reg">注册</a></span>
    <span><a title="发表" href="/login">登陆</a></span>
    <% } %>
</form>