<%- include header %>
<form method="post">
    标题：<br />
    <input type="text" name="title" value="<%= posts.title %>" disabled="disabled" /><br />
    标签：<br />
    <input type="text" name="tag1" value="<%= posts.tags[0] %>" disabled="disabled" />
    <input type="text" name="tag2" value="<%= posts.tags[1] %>" disabled="disabled" />
    <!--<input type="text" name="tag3" value="<%= posts.tags[2] %>" disabled="disabled" /><br />-->
